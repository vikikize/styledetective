{
  "manifest_version": 3,
  "name": "Style Detective",
  "version": "1.0",
  "description": "Style Detective for Mozilla Firefox",
  "permissions": [
    "tabs",
    "scripting"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_start"
    }
  ],
  "devtools_page": "devtools.html",
  "action": {
    "default_title": "Selector Tool"
  }
}
