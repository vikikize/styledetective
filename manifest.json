{
  "manifest_version": 3,
  "name": "Universal DevTools Panel - Firefox",
  "version": "1.0",
  "description": "DevTools panel compatible with Firefox",
  "permissions": [
    "tabs",
    "scripting"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "devtools_page": "devtools.html",
  "action": {
    "default_title": "Selector Tool"
  }
}
